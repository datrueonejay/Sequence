<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/white"
    tools:context="com.datrueonejay.canyouescape.MainActivity">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:id="@+id/fill"
        android:layout_alignParentTop="true"
        />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/downButton"
        android:layout_marginBottom="16dp"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/upButton"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_above="@+id/mid"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/rightButton"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_above="@+id/downButton"
        android:layout_toRightOf="@+id/mid"
        />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/leftButton"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_above="@+id/downButton"
        android:layout_toLeftOf="@+id/mid"
        />

    <com.datrueonejay.canyouescape.MyCustomTextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/mid"
        android:textAlignment="center"
        android:background="@null"
        android:layout_above="@+id/downButton"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        android:layout_alignParentBottom="true"
        android:id="@+id/settings"/>

    <com.datrueonejay.canyouescape.MyCustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/level"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5dp"
        android:paddingLeft="15dp"
        android:textSize="30sp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/white"/>

    <!--move counter-->
    <com.datrueonejay.canyouescape.MyCustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/moveCounter"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:paddingRight="15dp"
        android:textSize="30sp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/white"/>

    <com.datrueonejay.canyouescape.MyCustomButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nextLevel"
        android:padding="7dp"
        android:textSize="30sp"
        android:layout_above="@+id/upButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:visibility="invisible"/>

    <com.datrueonejay.canyouescape.MyCustomTextView
        android:paddingTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/highscore"
        android:textSize="50sp"
        android:textAlignment="center"
        android:layout_below="@+id/moveCounter"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:textColor="@color/white"/>

    <com.datrueonejay.canyouescape.MyCustomTextView
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textAlignment="center"
        android:id="@+id/timer"
        android:layout_below="@+id/highscore"
        android:visibility="invisible"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"/>

    <ImageView
        android:adjustViewBounds="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:id="@+id/rightOrWrong"
        android:layout_above="@+id/upButton"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"/>





</RelativeLayout>
