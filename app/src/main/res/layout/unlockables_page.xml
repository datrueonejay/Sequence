<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="400dp"
    android:layout_height="match_parent"
    >

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:id="@+id/mid"
        android:layout_above="@+id/downButton"/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/midSkinny"/>

    <com.datrueonejay.canyouescape.MyCustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="100sp"
        android:id="@+id/title"
        android:textColor="@color/white"
        android:background="@color/blue" />

    <com.datrueonejay.canyouescape.MyCustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="100sp"
        android:id="@+id/how"
        android:textColor="@color/blue"
        android:layout_below="@+id/title"
        />

    <ImageView
        android:layout_below="@+id/how"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toLeftOf="@+id/midSkinny"
        android:id="@+id/correct"
        />

    <ImageView
        android:layout_below="@+id/how"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/midSkinny"
        android:id="@+id/incorrect"
        />

    <ImageView
        android:id="@+id/lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerInside"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/mid"
        android:id="@+id/upButton"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/downButton"
        android:layout_toLeftOf="@+id/downButton"
        android:id="@+id/leftButton"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/use"
        android:id="@+id/downButton"
        android:layout_centerHorizontal="true"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_above="@+id/downButton"
        android:layout_toRightOf="@id/downButton"
        android:id="@+id/rightButton"
        android:layout_centerHorizontal="true"
        />

    <com.datrueonejay.canyouescape.MyCustomTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:textSize="100sp"
        android:textAlignment="center"
        android:id="@+id/description"
        android:textColor="@color/blue"
        />

    <com.datrueonejay.canyouescape.MyCustomButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/use"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/description"
        />

    <com.datrueonejay.canyouescape.MyCustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/use_text"
        android:textSize="100sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/description"
        android:elevation="10dp"
        />

</RelativeLayout>