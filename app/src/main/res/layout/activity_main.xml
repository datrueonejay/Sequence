<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/white"
    tools:context="com.datrueonejay.canyouescape.MainActivity">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/downButton"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/upButton"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_above="@+id/downButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp" />

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/rightButton"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="65dp"/>

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/leftButton"
        android:scaleType="fitCenter"
        android:background="@null"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="65dp" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/settings"/>

    <com.datrueonejay.canyouescape.MyCustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Level"
        android:id="@+id/level"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:textSize="30sp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/blue"/>

    <!--move counter-->
    <com.datrueonejay.canyouescape.MyCustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Move: "
        android:id="@+id/moveCounter"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:textSize="30sp"
        android:layout_marginBottom="15dp"
        android:textColor="@color/blue"/>

    <!--next level button-->
    <com.datrueonejay.canyouescape.MyCustomButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next Level"
        android:id="@+id/nextLevel"
        android:padding="7dp"
        android:textSize="30sp"
        android:layout_below="@+id/highscore"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:visibility="invisible"/>

    <com.datrueonejay.canyouescape.MyCustomTextView
        android:padding="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="High Score:"
        android:id="@+id/highscore"
        android:layout_below="@+id/moveCounter"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:textSize="30sp"
        android:textColor="@color/blue"/>

    <com.datrueonejay.canyouescape.MyCustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:id="@+id/timer"
        android:layout_below="@+id/nextLevel"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:textColor="@color/blue"/>

    <ImageView
        android:adjustViewBounds="true"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="20dp"
        android:id="@+id/rightOrWrong"
        android:layout_above="@+id/upButton"
        android:layout_centerHorizontal="true"/>

    <!--
    <shape xmlns:android="http://schemas.android.com/apk/res/android"
        android:shape="oval"
        android:layout_above="@+id/upButton">
        <solid
            android:color="@color/red"/>
    </shape>
    -->

</RelativeLayout>
